<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:stepProgressBar="clr-namespace:Syncfusion.Maui.ProgressBar;assembly=Syncfusion.Maui.ProgressBar"
             x:Class="Toronto.Concerts.MAUI.Pages.StartupPage"
             Title="StartupPage">
    <VerticalStackLayout VerticalOptions="Center"
                         HorizontalOptions="Center">
        <stepProgressBar:SfCircularProgressBar IsIndeterminate="True"
                                               TrackFill="Red" 
                                               VerticalOptions="Center"
                                               HorizontalOptions="Center"
                                               WidthRequest="100"
                                               HeightRequest="100"/>
    </VerticalStackLayout>
</ContentPage>